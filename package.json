{
  "name": "shop4me",
  "version": "1.0.1",
  "main": "main.js",
  "description": "Shop4me â€” Comparador y scrapers",
  "author": "Vos",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder -w",
    "publish": "electron-builder --win --publish always"
  },
  "devDependencies": {
    "electron": "^38.6.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "ar.shop4me.app",
    "productName": "Shop4me",
    "asar": true,
    "asarUnpack": [
      "scrapers/**",
      "hooks/**",
      "node_modules/playwright/**",
      "node_modules/playwright-core/**",
      "node_modules/xlsx/**",
      "node_modules/puppeteer/**"
    ],
    "files": [
      "**/*",
      "!dist",
      "!out"
    ],
    "extraResources": [
      {
        "from": "scrapers",
        "to": "scrapers"
      },
      {
        "from": "hooks",
        "to": "hooks"
      },
      {
        "from": "maestros_convertido.txt",
        "to": "maestros_convertido.txt"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "logo.png",
      "publish": [
        {
          "provider": "github",
          "owner": "justanthrcoder",
          "repo": "Shop4me"
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "logo.png"
    }
  },
  "dependencies": {
    "axios": "^1.13.2",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.7",
    "playwright": "^1.56.1",
    "xlsx": "^0.18.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/justanthrcoder/Shop4me.git"
  }
}